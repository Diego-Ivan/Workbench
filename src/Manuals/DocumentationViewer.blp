using Gtk 4.0;
using Adw 1;
using GObject 2.0;
using WebKit 6.0;

Adw.Window documentation_viewer {
  width-request: 400;
  height-request: 400;
  default-width: 1024;
  default-height: 768;
  hide-on-close: true;
  title: _("Manuals");

  content: Adw.NavigationSplitView split_view {
    sidebar: Adw.NavigationPage sidebar {
      title: bind documentation_viewer.title;
      child: Adw.ToolbarView {
        [top]
        Adw.HeaderBar {
          [start]
          WindowControls {
            side: end;
          }
          title-widget: Adw.WindowTitle {
            title: bind documentation_viewer.title;
          };
          [end]
          Button button_forward {
            icon-name: "go-next-symbolic";
            tooltip-text: _("Forward");
            styles ["flat"]
          }
          [end]
          Button button_back {
            icon-name: "go-previous-symbolic";
            tooltip-text: _("Back");
            styles ["flat"]
          }
        }

        [bottom]
        Box {
          styles ["toolbar"]
          SearchEntry search_entry {
            hexpand: true;
            placeholder-text: _("Search Manuals");
          }
          Button button_shortcuts {
            icon-name: "keyboard-shortcuts-symbolic";
            tooltip-text: _("Keyboard Shortcuts (Ctrl+?)");
            styles ["flat"]
          }
        }

        content: Stack stack {
          transition-type: crossfade;

          ScrolledWindow browse_page {
            vexpand: true;
            width-request: 400;

            ListView browse_list_view {
              enable-rubberband: false;
              factory: BuilderListItemFactory {
                template ListItem {
                  child: TreeExpander expander {
                    list-row: bind template.item;
                    child: Inscription {
                      hexpand: true;
                      nat-chars: 10;
                      text-overflow: ellipsize_end;
                      text: bind expander.item as <$DocumentationPage>.name;
                    };
                  };
                }
              };
              styles ["navigation-sidebar"]
            }
          }

          ScrolledWindow search_page {
            vexpand: true;
            width-request: 400;

            ListView search_list_view {
              enable-rubberband: false;
              model: SingleSelection search_model {
                autoselect: false;
                model: SortListModel {
                  sorter: StringSorter search_sorter {};
                  model: FilterListModel filter_model {
                    filter: StringFilter filter {
                      match-mode: substring;
                    };
                  };
                };
              };

              factory: BuilderListItemFactory {
                template ListItem {
                  child: Inscription {
                    hexpand: true;
                    nat-chars: 10;
                    text-overflow: ellipsize_end;
                    text: bind template.item as <$DocumentationPage>.search_name;
                  };
                }
              };
              styles ["navigation-sidebar"]
            }
          }
        };
      };
    };

    content: Adw.NavigationPage {
      title: bind documentation_viewer.title;
      child: WebKit.WebView webview {
        settings: WebKit.Settings {
          enable-back-forward-navigation-gestures: true;
          enable-developer-extras: true;
          enable-smooth-scrolling: true;
        };
      };
    };
  };
}
